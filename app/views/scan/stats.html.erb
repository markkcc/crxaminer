<div class="min-h-screen flex flex-col bg-gray-50 dark:bg-gray-900">
  <div class="max-w-7xl w-full mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow overflow-y-auto">
    <!-- Logo -->
    <div class="flex justify-center mb-2">
      <div style="width: 350px;">
        <%= render "shared/logo" %>
      </div>
    </div>

    <div class="w-full bg-gray-100 dark:bg-gray-900 py-2 text-center mb-2">
      <span class="space-x-4">
        <%= link_to "[ new scan ]", root_path, class: "text-gray-600 dark:text-gray-400 hover:text-purple-500 dark:hover:text-purple-400" %>
        <%= link_to "[ statistics ]", stats_scan_index_path, class: "text-gray-600 dark:text-gray-400 hover:text-purple-500 dark:hover:text-purple-400" %>
        <%= link_to "[ github ]", "https://github.com/markkcc/crxaminer", target: "_blank", class: "text-gray-600 dark:text-gray-400 hover:text-purple-500 dark:hover:text-purple-400" %>
        <%= link_to "[ twitter ]", "https://x.com/CRXaminer", target: "_blank", class: "text-gray-600 dark:text-gray-400 hover:text-purple-500 dark:hover:text-purple-400" %>
        <%= link_to "[ help ]", "https://astarte.security/docs/tools/crxaminer", target: "_blank", class: "text-gray-600 dark:text-gray-400 hover:text-purple-500 dark:hover:text-purple-400" %>
      </span>
    </div>

    <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 mb-6">
      <div class="mb-6">
        <h1 class="text-2xl font-bold text-gray-700 dark:text-gray-200 mb-6">
          Statistics Dashboard
        </h1>

        <!-- Metrics Dashboard -->
        <!-- Top Metrics Row -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <!-- Unique Extensions Scanned -->
          <div class="bg-purple-50 dark:bg-gray-700 rounded-lg p-6 border border-purple-200 dark:border-gray-600">
            <h2 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Unique ext. scanned</h2>
            <p class="text-4xl font-bold text-purple-600 dark:text-purple-400"><%= number_with_delimiter(@total_scans) %></p>
          </div>

          <!-- Scans Last 30 Days -->
          <div class="bg-purple-50 dark:bg-gray-700 rounded-lg p-6 border border-purple-200 dark:border-gray-600">
            <h2 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Scans in last 30 days</h2>
            <p class="text-4xl font-bold text-purple-600 dark:text-purple-400"><%= number_with_delimiter(@scans_last_30_days) %></p>
          </div>

          <!-- Extensions with <all_urls> -->
          <div class="bg-purple-50 dark:bg-gray-700 rounded-lg p-6 border border-purple-200 dark:border-gray-600">
            <h2 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">Ext. with &lt;all_urls&gt;</h2>
            <p class="text-4xl font-bold text-purple-600 dark:text-purple-400"><%= number_with_delimiter(@all_urls_count) %></p>
          </div>
        </div>

        <!-- Bottom Tables Row -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
          <!-- Top 5 Spiciest Card -->
          <div class="bg-purple-50 dark:bg-gray-700 rounded-lg p-6 border border-purple-200 dark:border-gray-600">
            <h2 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-4">Top 5 spiciest</h2>
            <div class="space-y-3">
              <% @spiciest_extensions.each do |ext_data| %>
                <% scan = ext_data[:scan] %>
                <%= link_to scan_path(scan.extension_id), class: "flex items-center justify-between p-2 hover:bg-purple-100 dark:hover:bg-gray-600 rounded transition-colors" do %>
                  <div class="flex items-center space-x-3 min-w-0 flex-1">
                    <% if scan.extension_image.present? %>
                      <img src="<%= scan.extension_image %>" alt="<%= scan.extension_name %>" class="w-8 h-8 rounded flex-shrink-0">
                    <% else %>
                      <div class="w-8 h-8 bg-gray-300 dark:bg-gray-600 rounded flex-shrink-0"></div>
                    <% end %>
                    <span class="text-sm text-gray-700 dark:text-gray-200 truncate"><%= scan.extension_name || "Unknown Extension" %></span>
                  </div>
                  <span class="text-sm font-semibold text-purple-600 dark:text-purple-400 ml-2 flex-shrink-0"><%= ext_data[:finding_count] %> findings</span>
                <% end %>
              <% end %>
            </div>
          </div>

          <!-- Severity Distribution Card -->
          <div class="bg-purple-50 dark:bg-gray-700 rounded-lg p-6 border border-purple-200 dark:border-gray-600">
            <h2 class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-4">Severity Distribution</h2>
            <div class="space-y-2">
              <% @severity_counts.each do |severity, count| %>
                <%
                  total_count = @severity_counts.values.sum
                  percentage = total_count > 0 ? (count.to_f / total_count * 100).round : 0
                  color_classes = case severity
                    when 'Critical' then 'bg-purple-500'
                    when 'High' then 'bg-red-500'
                    when 'Medium' then 'bg-orange-500'
                    when 'Low' then 'bg-yellow-500'
                    when 'Minimal' then 'bg-green-500'
                  end
                %>
                <div class="severity-filter-btn p-2 hover:bg-purple-100 dark:hover:bg-gray-600 rounded transition-colors cursor-pointer" data-severity="<%= severity %>">
                  <div class="flex items-center justify-between mb-1">
                    <span class="text-sm text-gray-700 dark:text-gray-200"><%= severity %></span>
                    <div class="flex items-center space-x-2">
                      <span class="text-xs text-gray-600 dark:text-gray-400"><%= percentage %>%</span>
                      <span class="text-sm font-semibold text-purple-600 dark:text-purple-400"><%= number_with_delimiter(count) %></span>
                    </div>
                  </div>
                  <div class="w-full bg-purple-200 dark:bg-gray-600 rounded-full h-3 relative">
                    <div class="<%= color_classes %> h-3 rounded-full" style="width: <%= percentage %>%;"></div>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      
      <div class="border-t border-gray-200 dark:border-gray-700 pt-4">
        <h2 class="text-lg font-semibold text-gray-700 dark:text-gray-200 mb-4">Recent Scans</h2>
        
        <div class="overflow-x-auto w-full">
          <table class="w-full">
            <thead class="bg-gray-50 dark:bg-gray-900">
              <tr>
                <th scope="col" class="w-5/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b-2 border-gray-300 dark:border-gray-600">
                  Extension
                </th>
                <th scope="col" class="w-2/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b-2 border-gray-300 dark:border-gray-600">
                  Risk Level
                </th>
                <th scope="col" class="w-3/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b-2 border-gray-300 dark:border-gray-600">
                  Scan Date
                </th>
                <th scope="col" class="w-2/12 px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider border-b-2 border-gray-300 dark:border-gray-600">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody id="recent-scans-tbody" class="bg-white dark:bg-gray-800">
              <%= render partial: 'recent_scans_table', locals: { recent_scans: @recent_scans } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Attribution link -->
    <div class="text-center mt-8 mb-4">
      <%= link_to "https://astarte.security/", target: "_blank", class: "text-gray-600 dark:text-gray-400 hover:opacity-80" do %>
        by <span style="color: #ffbc00;">âœ¦</span> <span style="color: #52448d;">Astarte</span>
      <% end %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    let activeSeverity = null;
    const filterButtons = document.querySelectorAll('.severity-filter-btn');
    const tbody = document.getElementById('recent-scans-tbody');

    filterButtons.forEach(button => {
      button.addEventListener('click', function() {
        const severity = this.dataset.severity;

        // If clicking the same severity, deactivate filter
        if (activeSeverity === severity) {
          activeSeverity = null;
          // Remove active state from all buttons
          filterButtons.forEach(btn => {
            btn.classList.remove('ring-2', 'ring-purple-500', 'ring-offset-2', 'dark:ring-offset-gray-700', 'bg-purple-100', 'dark:bg-gray-600');
          });
          // Fetch all scans (no filter)
          fetchScans(null);
        } else {
          // Activate new filter
          activeSeverity = severity;

          // Update button states
          filterButtons.forEach(btn => {
            if (btn.dataset.severity === severity) {
              btn.classList.add('ring-2', 'ring-purple-500', 'ring-offset-2', 'dark:ring-offset-gray-700', 'bg-purple-100', 'dark:bg-gray-600');
            } else {
              btn.classList.remove('ring-2', 'ring-purple-500', 'ring-offset-2', 'dark:ring-offset-gray-700', 'bg-purple-100', 'dark:bg-gray-600');
            }
          });

          // Fetch filtered scans
          fetchScans(severity);
        }
      });
    });

    function fetchScans(severity) {
      const url = new URL(window.location.href);
      if (severity) {
        url.searchParams.set('severity', severity);
      } else {
        url.searchParams.delete('severity');
      }

      fetch(url, {
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(response => response.text())
      .then(html => {
        tbody.innerHTML = html;
      })
      .catch(error => {
        console.error('Error fetching scans:', error);
      });
    }
  });
</script>